.fromBox {
  height: 450px;
  width: 100%;
  position: relative;
}
.backGuoud {
  z-index: -1;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  position: absolute;
}

/* 表单 */
.tableBox {
  width: 90%;
  height: 160px;
  border-radius: 10px;
  border: 1px solid black;
  margin: 0px auto;
}
/* 添加按钮盒子 */
.addBox {
  width: 90%;
  height: 35px; 
  margin: 0 auto;
  position: relative;
  /* border: 1px solid black */
}
/* 添加按钮 */
.addPlace {
  width: 60px;
  height: 25px;
  position: absolute;
  top: 4px;
  left: 0px;
  border-radius: 10px;
  line-height: 25px;
  text-align: center;
  border: 1px solid black;
}
/* 输入盒子 */
.inputPlace {
  margin: 10px auto;
  width: 90%;
  height: 30px;
  line-height: 30px;
  border-radius: 10px;
  border-bottom: 1px solid black;
}
.inputPlace input{
  line-height: 30px;
}

.inputBody {
  margin:  10px auto;
  width: 90%;
  height: 30px;
  line-height: 30px;
  border-radius: 10px;
  border-bottom: 1px solid black;
